@model SuperFlexiUI.AdvancedFilePicker

@{
	string defaultText = Model.PickerType == "image" ? Model.ImageText : Model.FileText;
}

<div class="advanced-file-picker" data-picker-type="@Model.PickerType" data-picker-default-text="@defaultText">
	<button class="advanced-file-picker__show-tools-btn" type="button"><i class="fa fa-gear"></i></button>
	<div class="advanced-file-picker__tools hide">
		<input class="advanced-file-picker__tools-input" type="text">
		<button class="advanced-file-picker__tools-btn advanced-file-picker__tools-btn--ok" type="button"><i class="fa fa-check"></i></button>
		<button class="advanced-file-picker__tools-btn advanced-file-picker__tools-btn--cancel" type="button"><i class="fa fa-times"></i></button>
	</div>
	<a class="advanced-file-picker__link" href="#">
		<img class="advanced-file-picker__image-preview">
	</a>
	<div class="advanced-file-picker__text">@defaultText</div>
</div>
